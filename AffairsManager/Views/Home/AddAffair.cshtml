@model AffairsManager.Models.Affairs
@{
    Layout = null;
}

<a href="/Home/Index">
    <i class="material-icons">home</i>
</a>
    
       <div class="dottedSheet">
           <div class="header">Добавить</div>
    @using (Html.BeginForm())
        {
            <p>Название: @Html.TextBoxFor(x => x.Name,
                            new { @maxlength = "100", required = "required",style = "width: 280px;"})</p>
            <p>Описание: @Html.TextAreaFor(x => x.Description,
                            new { @style = "width: 280px;" }) </p>
            <p>Важность:  <br> 
                         @Html.RadioButtonFor(x=>x.Importance, "Red", new {@checked="chrecked"})
